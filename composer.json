{
    "name": "djordje-petrovic/my_candle_app",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "config/functions.php",
            "config/config.php",
            "config/routes.php"
        ]
    },
    "authors": [
        {
            "name": "Djordje Petrovic",
            "email": "djordje.pojatarac95@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-pdo": "*"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^12.3",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "ecs": "vendor/bin/ecs",
        "ecs:fix": "vendor/bin/ecs --fix",
        "phpstan": "vendor/bin/phpstan analyze --level 9 src config"
    }
}
